# ============================================
# Advanced Bug Bounty MCP Server Configuration
# ============================================

# ===== REQUIRED API KEYS =====

# Shodan API Key (https://account.shodan.io/)
SHODAN_API_KEY=your_shodan_api_key_here

# VirusTotal API Key (https://www.virustotal.com/gui/my-apikey)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Censys API (https://search.censys.io/account/api)
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here

# GitHub Personal Access Token (https://github.com/settings/tokens)
GITHUB_TOKEN=your_github_token_here

# SecurityTrails API Key (https://securitytrails.com/app/account/credentials)
SECURITYTRAILS_API_KEY=your_securitytrails_api_key_here

# Hunter.how API Key (https://hunter.how/)
HUNTER_API_KEY=your_hunter_api_key_here


# ===== OPTIONAL AI PROVIDERS =====

# Groq API Key (https://console.groq.com/keys)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here


# ===== DATABASE CONFIGURATION =====

# MongoDB Connection
MONGODB_URI=mongodb://admin:bugbounty_secure_pass@mongodb:27017/bugbounty?authSource=admin
MONGO_PASSWORD=bugbounty_secure_pass

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=bugbounty_redis
REDIS_DB=0


# ===== SCANNING CONFIGURATION =====

# Maximum concurrent threads
MAX_THREADS=50

# Rate limit delay (seconds between requests)
RATE_LIMIT_DELAY=1

# Request timeout (seconds)
TIMEOUT=30

# Randomize user agents
USER_AGENT_RANDOMIZATION=true

# Enable stealth mode (slower but less detectable)
STEALTH_MODE=false

# Maximum subdomain enumeration depth
MAX_SUBDOMAIN_DEPTH=3

# Port scan timeout (seconds)
PORT_SCAN_TIMEOUT=5


# ===== PROXY CONFIGURATION =====

# HTTP Proxy
HTTP_PROXY=

# HTTPS Proxy
HTTPS_PROXY=

# SOCKS5 Proxy
SOCKS_PROXY=

# Proxy rotation
PROXY_ROTATION_ENABLED=false


# ===== NOTIFICATION CONFIGURATION =====

# Slack Webhook URL
SLACK_WEBHOOK_URL=

# Discord Webhook URL
DISCORD_WEBHOOK_URL=

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=


# ===== ADVANCED FEATURES =====

# Enable ML-based vulnerability prediction
ML_PREDICTIONS_ENABLED=true

# Enable exploit chain detection
EXPLOIT_CHAIN_DETECTION=true

# Auto-validate findings
AUTO_VALIDATE_FINDINGS=true

# Continuous monitoring enabled
CONTINUOUS_MONITORING=true

# Report generation format (markdown, pdf, json, html)
DEFAULT_REPORT_FORMAT=markdown


# ===== SECURITY SETTINGS =====

# Verify SSL certificates
VERIFY_SSL=true

# Maximum request retries
MAX_RETRIES=3

# Blacklist domains (comma-separated)
BLACKLIST_DOMAINS=localhost,127.0.0.1,internal

# Enable logging
LOGGING_ENABLED=true
LOG_LEVEL=INFO
LOG_FILE=/app/logs/bugbounty.log


# ===== PERFORMANCE TUNING =====

# Cache TTL (seconds)
CACHE_TTL=3600

# Maximum cache size (MB)
MAX_CACHE_SIZE=1024

# Worker processes
WORKER_PROCESSES=4

# Enable async I/O
ASYNC_IO_ENABLED=true


# ===== WORDLIST CONFIGURATION =====

# Subdomain wordlist path
SUBDOMAIN_WORDLIST=/app/wordlists/subdomains.txt

# Directory wordlist path
DIRECTORY_WORDLIST=/app/wordlists/directories.txt

# Parameter wordlist path
PARAMETER_WORDLIST=/app/wordlists/parameters.txt


# ===== NUCLEI CONFIGURATION =====

# Nuclei templates directory
NUCLEI_TEMPLATES_DIR=/app/nuclei-templates

# Enable Nuclei auto-update
NUCLEI_AUTO_UPDATE=true

# Nuclei rate limit (requests per second)
NUCLEI_RATE_LIMIT=150

# Nuclei severity filter (info,low,medium,high,critical)
NUCLEI_SEVERITY_FILTER=medium,high,critical


# ===== INTEGRATION URLS =====

# MCP Server Host
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=9090

# Web Dashboard Host
WEB_DASHBOARD_HOST=0.0.0.0
WEB_DASHBOARD_PORT=8080

# API Base URL
API_BASE_URL=http://localhost:8080/api


# ===== DOCKER CONFIGURATION =====

# Container timezone
TZ=UTC

# Docker host
DOCKER_HOST=unix:///var/run/docker.sock


# ===== DEVELOPMENT SETTINGS =====

# Debug mode
DEBUG=false

# Development mode
DEV_MODE=false

# Auto-reload on code changes
AUTO_RELOAD=false


# ===== MISCELLANEOUS =====

# Organization name
ORGANIZATION_NAME=Your Organization

# Contact email
CONTACT_EMAIL=security@example.com

# Bug bounty program name
PROGRAM_NAME=Your Bug Bounty Program